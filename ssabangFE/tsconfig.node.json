{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["env.d.ts", "src/**/*.js", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
